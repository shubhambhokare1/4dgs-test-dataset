<mujoco model="scene10_texture">
  <compiler angle="radian"/>
  
  <option timestep="0.002" gravity="0 0 -9.81">
    <flag contact="disable"/>
  </option>

  <visual>
    <global offwidth="1920" offheight="1080"/>
    <quality shadowsize="4096"/>
  </visual>

  <asset>
    <texture name="grid" type="2d" builtin="checker" width="512" height="512" 
             rgb1=".1 .1 .1" rgb2=".2 .2 .2"/>
    <material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance="0"/>
    
    <!-- High-frequency checkerboard texture for sphere -->
    <texture name="checker_hf" type="2d" builtin="checker" width="1024" height="1024" 
             rgb1="0.1 0.1 0.1" rgb2="0.9 0.9 0.9"/>
    <material name="checker_mat" texture="checker_hf" texrepeat="8 8" texuniform="false" reflectance="0.1"/>
    
    <texture name="sky" type="skybox" builtin="gradient" width="512" height="512" 
             rgb1="0.3 0.5 0.7" rgb2="0 0 0"/>
  </asset>

  <worldbody>
    <light directional="true" pos="0 0 3" dir="0 0 -1" diffuse="0.8 0.8 0.8"/>
    <light directional="true" pos="2 2 3" dir="-0.5 -0.5 -1" diffuse="0.4 0.4 0.4"/>
    
    <geom name="floor" type="plane" size="5 5 0.1" material="grid" pos="0 0 -0.5"/>
    
    <!-- Textured sphere that will orbit and spin -->
    <body name="textured_sphere" pos="1.5 0 0.8">
      <freejoint/>
      <geom name="sphere_geom" type="sphere" size="0.2" material="checker_mat" mass="1"/>
    </body>

    <camera name="cam0" pos="2.5 0 1.5" xyaxes="0 -1 0 0.5 0 1" fovy="60"/>
    <camera name="cam1" pos="0 2.5 1.5" xyaxes="-1 0 0 0 0.5 1" fovy="60"/>
    <camera name="cam2" pos="-2.5 0 1.5" xyaxes="0 1 0 -0.5 0 1" fovy="60"/>
    <camera name="cam3" pos="0 -2.5 1.5" xyaxes="1 0 0 0 -0.5 1" fovy="60"/>
    <camera name="cam4" pos="2 2 2" xyaxes="-0.7 -0.7 0 0.4 -0.4 0.8" fovy="60"/>
    <camera name="cam5" pos="-2 2 2" xyaxes="-0.7 0.7 0 -0.4 -0.4 0.8" fovy="60"/>
    <camera name="cam6" pos="2 -2 2" xyaxes="0.7 -0.7 0 0.4 0.4 0.8" fovy="60"/>
    <camera name="cam7" pos="-2 -2 2" xyaxes="0.7 0.7 0 -0.4 0.4 0.8" fovy="60"/>
  </worldbody>
</mujoco>