<mujoco model="scene10_texture">
  <compiler angle="radian"/>
  
  <option timestep="0.002" gravity="0 0 -9.81">
    <flag contact="disable"/>
  </option>

  <visual>
    <global offwidth="1920" offheight="1080"/>
    <quality shadowsize="4096"/>
  </visual>

  <asset>
    <texture name="white_skybox"
             type="skybox"
             builtin="flat"
             width="512"
             height="512"
             rgb1="1 1 1"
             rgb2="1 1 1"/>
    <material name="white_floor" rgba="1 1 1 1" reflectance="0"/>

    <!-- High-frequency checkerboard texture for sphere -->
    <texture name="checker_hf" type="2d" builtin="checker" width="1024" height="1024"
             rgb1="0.1 0.1 0.1" rgb2="0.9 0.9 0.9"/>
    <material name="checker_mat" texture="checker_hf" texrepeat="8 8" texuniform="false" reflectance="0.1"/>
  </asset>

  <worldbody>
    <light directional="true" pos="0 0 3" dir="0 0 -1" diffuse="0.8 0.8 0.8"/>
    <light directional="true" pos="2 2 3" dir="-0.5 -0.5 -1" diffuse="0.4 0.4 0.4"/>
    
    <geom name="floor" type="plane" size="5 5 0.1" material="white_floor" pos="0 0 -0.5"/>
    
    <body name="target" pos="0 0 0.8">
      <site name="target_site" size="0.01" rgba="1 0 0 0"/>
    </body>
    
    <!-- Textured sphere that orbits and spins -->
    <body name="textured_sphere" pos="1.5 0 0.8">
      <freejoint/>
      <geom name="sphere_geom" type="sphere" size="0.4" material="checker_mat" mass="1"/>
    </body>

    <camera name="cam0" pos="2.5 0 1.5" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam1" pos="0 2.5 1.5" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam2" pos="-2.5 0 1.5" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam3" pos="0 -2.5 1.5" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam4" pos="2 2 2.5" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam5" pos="-2 2 2.5" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam6" pos="2 -2 2.5" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam7" pos="-2 -2 2.5" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam8" pos="1.8 0 0.6" mode="targetbody" target="target" fovy="55"/>
    <camera name="cam9" pos="-1.8 0 0.6" mode="targetbody" target="target" fovy="55"/>
    <camera name="cam10" pos="0 0 3" mode="targetbody" target="target" fovy="45"/>
    <camera name="cam11" pos="1 1 2.5" mode="targetbody" target="target" fovy="45"/>
  </worldbody>
</mujoco>