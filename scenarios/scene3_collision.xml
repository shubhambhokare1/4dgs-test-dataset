<mujoco model="scene3_three_body_collision">
  <compiler angle="radian"/>
  
  <option timestep="0.002" gravity="0 0 -9.81">
    <flag contact="disable"/>
  </option>

  <visual>
    <global offwidth="1920" offheight="1080"/>
    <!-- Disable shadows -->
    <quality shadowsize="0"/>
  </visual>

  <asset>
    <!-- Proper white skybox (width & height required) -->
    <texture name="white_skybox"
             type="skybox"
             builtin="flat"
             width="512"
             height="512"
             rgb1="1 1 1"
             rgb2="1 1 1"/>

    <material name="white_floor" rgba="1 1 1 1" reflectance="0"/>
  </asset>

  <worldbody>
    <!-- Simple lighting without shadows -->
    <light directional="true"
           pos="0 0 3"
           dir="0 0 -1"
           diffuse="1 1 1"
           specular="0 0 0"/>

    <geom name="floor"
          type="plane"
          size="5 5 0.1"
          material="white_floor"
          pos="0 0 -0.5"/>

    <body name="target" pos="0 0 0.5">
      <site name="target_site" size="0.01" rgba="1 0 0 0"/>
    </body>

    <body name="sphere_1" pos="2.0 0 0.5">
      <freejoint/>
      <geom type="sphere" size="0.15"
            rgba="1.0 0.3 0.3 1" mass="1"/>
    </body>

    <body name="sphere_2" pos="-1.0 1.732 0.5">
      <freejoint/>
      <geom type="sphere" size="0.15"
            rgba="0.3 1.0 0.3 1" mass="1"/>
    </body>

    <body name="sphere_3" pos="-1.0 -1.732 0.5">
      <freejoint/>
      <geom type="sphere" size="0.15"
            rgba="0.3 0.3 1.0 1" mass="1"/>
    </body>

    <!-- Cameras unchanged -->
    <camera name="cam0" pos="3.5 0 1.8" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam1" pos="0 3.5 1.8" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam2" pos="-3.5 0 1.8" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam3" pos="0 -3.5 1.8" mode="targetbody" target="target" fovy="50"/>

    <camera name="cam4" pos="2.8 2.8 3" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam5" pos="-2.8 2.8 3" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam6" pos="2.8 -2.8 3" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam7" pos="-2.8 -2.8 3" mode="targetbody" target="target" fovy="50"/>

    <camera name="cam8" pos="2.5 0 0.8" mode="targetbody" target="target" fovy="55"/>
    <camera name="cam9" pos="-2.5 0 0.8" mode="targetbody" target="target" fovy="55"/>

    <camera name="cam10" pos="0 0 4.5" mode="targetbody" target="target" fovy="45"/>
    <camera name="cam11" pos="1.5 1.5 4" mode="targetbody" target="target" fovy="45"/>
  </worldbody>
</mujoco>