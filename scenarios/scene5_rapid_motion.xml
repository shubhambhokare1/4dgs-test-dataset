<mujoco model="scene5_rapid_motion">
  <compiler angle="radian"/>
  
  <option timestep="0.002" gravity="0 0 0">
    <flag contact="disable"/>
  </option>

  <visual>
    <global offwidth="1920" offheight="1080"/>
    <quality shadowsize="4096"/>
  </visual>

  <asset>
    <texture name="white_skybox"
             type="skybox"
             builtin="flat"
             width="512"
             height="512"
             rgb1="1 1 1"
             rgb2="1 1 1"/>
    <material name="white_floor" rgba="1 1 1 1" reflectance="0"/>
  </asset>

  <worldbody>
    <light directional="true" pos="0 0 5" dir="0 0 -1" diffuse="0.8 0.8 0.8"/>
    <light directional="true" pos="2 2 5" dir="-0.5 -0.5 -1" diffuse="0.4 0.4 0.4"/>
    
    <geom name="floor" type="plane" size="5 5 0.1" material="white_floor" pos="0 0 -0.5"/>

    <body name="target" pos="0 0 0.5">
      <site name="target_site" size="0.01" rgba="1 0 0 0"/>
    </body>

    <!-- Single sphere for zigzag motion -->
    <body name="sphere" pos="0 0 0.5">
      <freejoint/>
      <geom name="sphere_geom" type="sphere" size="0.3" rgba="1.0 0.5 0.0 1" mass="1"/>
    </body>

    <camera name="cam0" pos="4 0 2" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam1" pos="0 4 2" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam2" pos="-4 0 2" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam3" pos="0 -4 2" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam4" pos="3 3 3" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam5" pos="-3 3 3" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam6" pos="3 -3 3" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam7" pos="-3 -3 3" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam8" pos="3 0 0.8" mode="targetbody" target="target" fovy="55"/>
    <camera name="cam9" pos="-3 0 0.8" mode="targetbody" target="target" fovy="55"/>
    <camera name="cam10" pos="0 0 5" mode="targetbody" target="target" fovy="45"/>
    <camera name="cam11" pos="2 2 4" mode="targetbody" target="target" fovy="45"/>
  </worldbody>
</mujoco>