<mujoco model="scene6_scale_change">
  <compiler angle="radian"/>
  
  <option timestep="0.002" gravity="0 0 -9.81">
    <flag contact="disable"/>
  </option>

  <visual>
    <global offwidth="1920" offheight="1080"/>
    <quality shadowsize="4096"/>
  </visual>

  <asset>
    <texture name="grid" type="2d" builtin="checker" width="512" height="512" 
             rgb1=".1 .1 .1" rgb2=".2 .2 .2"/>
    <material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance="0"/>
    <texture name="sky" type="skybox" builtin="gradient" width="512" height="512" 
             rgb1="0.3 0.5 0.7" rgb2="0 0 0"/>
  </asset>

  <worldbody>
    <light directional="true" pos="0 0 5" dir="0 0 -1" diffuse="0.8 0.8 0.8"/>
    <light directional="true" pos="2 2 5" dir="-0.5 -0.5 -1" diffuse="0.4 0.4 0.4"/>
    
    <geom name="floor" type="plane" size="10 10 0.1" material="grid" pos="0 0 -0.5"/>

    <!-- Target at midpoint of motion -->
    <body name="target" pos="0 0 1.5">
      <site name="target_site" size="0.01" rgba="1 0 0 0"/>
    </body>

    <!-- Sphere moving from far to near -->
    <body name="sphere" pos="-2.0 2.0 3.0">
      <freejoint/>
      <geom name="sphere_geom" type="sphere" size="0.2" rgba="0.2 0.8 0.2 1" mass="1"/>
    </body>

    <camera name="cam0" pos="3 0 2" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam1" pos="0 3 2" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam2" pos="-3 0 2" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam3" pos="0 -3 2" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam4" pos="2.5 2.5 3" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam5" pos="-2.5 2.5 3" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam6" pos="2.5 -2.5 3" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam7" pos="-2.5 -2.5 3" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam8" pos="2 0 0.5" mode="targetbody" target="target" fovy="55"/>
    <camera name="cam9" pos="-2 0 0.5" mode="targetbody" target="target" fovy="55"/>
    <camera name="cam10" pos="0 0 4.5" mode="targetbody" target="target" fovy="45"/>
    <camera name="cam11" pos="1.5 1.5 4" mode="targetbody" target="target" fovy="45"/>
  </worldbody>
</mujoco>