<mujoco model="scene9_topology">
  <compiler angle="radian"/>
  
  <option timestep="0.002" gravity="0 0 -9.81">
    <flag contact="disable"/>
  </option>

  <visual>
    <global offwidth="1920" offheight="1080"/>
    <quality shadowsize="4096"/>
  </visual>

  <asset>
    <texture name="white_skybox"
             type="skybox"
             builtin="flat"
             width="512"
             height="512"
             rgb1="1 1 1"
             rgb2="1 1 1"/>
    <material name="white_floor" rgba="1 1 1 1" reflectance="0"/>
  </asset>

  <worldbody>
    <light directional="true" pos="0 0 3" dir="0 0 -1" diffuse="0.8 0.8 0.8"/>
    <light directional="true" pos="2 2 3" dir="-0.5 -0.5 -1" diffuse="0.4 0.4 0.4"/>
    
    <geom name="floor" type="plane" size="5 5 0.1" material="white_floor" pos="0 0 -0.5"/>
    
    <!-- Target point -->
    <body name="target" pos="0 0 0.5">
      <site name="target_site" size="0.01" rgba="1 0 0 0"/>
    </body>
    
    <!-- Two droplets -->
    <body name="droplet_1" pos="0 0 0.5">
      <freejoint/>
      <geom name="droplet1_geom" type="sphere" size="0.3" rgba="0.4 0.7 0.9 1" mass="1"/>
    </body>
    
    <body name="droplet_2" pos="0 0 0.5">
      <freejoint/>
      <geom name="droplet2_geom" type="sphere" size="0.3" rgba="0.4 0.7 0.9 1" mass="1"/>
    </body>

    <!-- Ring 1: Cardinal, medium height -->
    <camera name="cam0" pos="2.2 0 1.3" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam1" pos="0 2.2 1.3" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam2" pos="-2.2 0 1.3" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam3" pos="0 -2.2 1.3" mode="targetbody" target="target" fovy="50"/>
    
    <!-- Ring 2: Diagonal, higher -->
    <camera name="cam4" pos="1.8 1.8 2.2" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam5" pos="-1.8 1.8 2.2" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam6" pos="1.8 -1.8 2.2" mode="targetbody" target="target" fovy="50"/>
    <camera name="cam7" pos="-1.8 -1.8 2.2" mode="targetbody" target="target" fovy="50"/>
    
    <!-- Ring 3: Close-up, low -->
    <camera name="cam8" pos="1.5 0 0.6" mode="targetbody" target="target" fovy="55"/>
    <camera name="cam9" pos="-1.5 0 0.6" mode="targetbody" target="target" fovy="55"/>
    
    <!-- Ring 4: Top views -->
    <camera name="cam10" pos="0 0 3" mode="targetbody" target="target" fovy="45"/>
    <camera name="cam11" pos="1 1 2.8" mode="targetbody" target="target" fovy="45"/>
  </worldbody>
</mujoco>